<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepseek.blog.mapper.PostSummaryMapper">
    <resultMap id="postSummaryResultMap" type="com.deepseek.blog.entity.PostSummary">
        <id column="id" property="id"/>
        <result column="post_id" property="postId"/>
        <result column="summary_text" property="summaryText"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findById" resultMap="postSummaryResultMap">
        SELECT * FROM post_summaries WHERE id = #{id}
    </select>

    <select id="findByPostId" resultMap="postSummaryResultMap">
        SELECT * FROM post_summaries WHERE post_id = #{postId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post_summaries (post_id, summary_text)
        VALUES (#{postId}, #{summaryText})
    </insert>

    <update id="update">
        UPDATE post_summaries
        SET summary_text = #{summaryText},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM post_summaries WHERE id = #{id}
    </delete>
</mapper>