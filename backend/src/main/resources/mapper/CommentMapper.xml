<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chictemp.backend.mapper.CommentMapper">
    <resultMap id="commentResultMap" type="com.chictemp.backend.entity.Comment">
        <id column="id" property="id"/>
        <result column="post_id" property="postId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <association property="user" column="user_id" select="com.chictemp.backend.mapper.UserMapper.findById"/>
    </resultMap>

    <select id="findById" resultMap="commentResultMap">
        SELECT * FROM comments WHERE id = #{id}
    </select>

    <select id="findByPostId" resultMap="commentResultMap">
        SELECT * FROM comments WHERE post_id = #{postId} ORDER BY created_at DESC
    </select>

    <select id="findByUserId" resultMap="commentResultMap">
        SELECT * FROM comments WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

    <select id="countByPostId" resultType="int">
        SELECT COUNT(*) FROM comments WHERE post_id = #{postId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (post_id, user_id, content)
        VALUES (#{postId}, #{userId}, #{content})
    </insert>

    <update id="update">
        UPDATE comments
        SET content = #{content},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM comments WHERE id = #{id}
    </delete>
</mapper>