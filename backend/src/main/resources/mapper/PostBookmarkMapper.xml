<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chictemp.backend.mapper.PostBookmarkMapper">
    <resultMap id="postBookmarkResultMap" type="com.chictemp.backend.entity.PostBookmark">
        <id column="post_id" property="postId"/>
        <id column="user_id" property="userId"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO post_bookmarks (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <delete id="delete">
        DELETE FROM post_bookmarks
        WHERE post_id = #{postId} AND user_id = #{userId}
    </delete>

    <select id="findByPostIdAndUserId" resultMap="postBookmarkResultMap">
        SELECT * FROM post_bookmarks
        WHERE post_id = #{postId} AND user_id = #{userId}
    </select>

    <select id="countByPostId" resultType="int">
        SELECT COUNT(*) FROM post_bookmarks WHERE post_id = #{postId}
    </select>

    <select id="findPostIdsByUserId" resultType="int">
        SELECT post_id FROM post_bookmarks WHERE user_id = #{userId}
    </select>
</mapper>